@model PixelPlacer.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<div id="Delete-Project-Container">
    <h2 style="color:whitesmoke;">Delete</h2>

    <h3 style="color:whitesmoke;">Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <div class="row delete-spacing">
            @*<div class="col-md-offset-4 col-lg-2 col-md-2 col-sm-2">
                <h4 style="color:whitesmoke;">Project :</h4>
            </div>*@
            <div class="col-md-offset-5 col-lg-2 col-md-2 col-sm-2">
                <h4>@Html.DisplayFor(model => model.Title)</h4>
            </div>
         </div>
                

        <form asp-action="Delete">
            <div class="form-actions no-color row">
                <div class="col-md-offset-5">
                    <input type="submit" value="Delete" class="btn red-btn btn-spacing" />
                    <a asp-action="Index" class="btn red-btn btn-spacing">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
