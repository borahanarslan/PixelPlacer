@model PixelPlacer.Models.ViewModels.VideoTypesViewModel

@{
    ViewData["Title"] = "ProjectPageDisplay";
}

<h2>Create a New Project</h2>
<div asp-controller ="Projects" asp-action="VideoTypes"class="row">
    @foreach (var type in @Model.VideoTypes)
    {
        if (type.VideoTypeId == 1)
        {
            <div class="col-md-offset-4 col-md-2">
                <a asp-controller="Projects" asp-action="AddVideo" asp-route-id="@type.VideoTypeId" class="btn btn-default">
                    Add BackGround
                </a>
            </div>       
        }
        else { 

            <div class="col-md-2">
                <a asp-controller="Projects" asp-action="AddVideo" asp-route-id="@type.VideoTypeId" class="btn btn-default">
                    Add Green Screen
                </a>
            </div>
        }

    }
</div>
<div class="row">
    @foreach (var item in Model.BackGround)
    {   <div class="col-lg-8">
        <h3>Background Video</h3>
        <div id="vid-1">
            <video width="500" controls Autoplay="autoplay" loop="loop" type="video/mp4" src=@item.VFilePath></video>
        </div>
    </div>
    }
    <div class="col-lg-4">
        <div class="row">
            @foreach (var item in Model.OverLay)
            {
                <div></div>
                <h3>Overlay</h3>
                <div id="vid-1">
                    <video width="200" controls Autoplay="autoplay" loop="loop" type="video/mp4" src=@item.VFilePath></video>
                </div>
            }
        </div>
    </div>

</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>