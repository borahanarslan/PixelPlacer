@model PixelPlacer.Models.ViewModels.ProjectListViewModel

@{
    ViewData["Title"] = "Projects";
}


<div id="ProjectListContainer"></div>
    <h2 style="color:whitesmoke;">My Projects</h2>
<br /> 
<table class="table">
    <tbody>
    @foreach (var item in Model.Projects)
    {
        <tr>
            <td style="color:whitesmoke;">
                <h5> @Html.DisplayFor(modelItem => item.Title)</h5>
            </td>
            <td>
                <a asp-action="Play" asp-route-id="@item.ProjectId" class="btn btn-danger project-list-btn box-showing">Play</a> |                      
                @*<a asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a> |*@
                <a asp-action="Delete" asp-route-id="@item.ProjectId" class="btn btn-danger project-list-btn box-showing">Delete</a>
            </td>
        </tr>
    }

    </tbody>
</table>
<br /><br />
<p>
    <a asp-action="NewProjectDisplay" class="btn btn-danger box-showing red-btn2 btn-spacing">Create New</a>
    <a asp-action="Profile" asp-controller="Home" class="btn btn-danger box-showing red-btn2 btn-spacing">Home</a>
</p>
