@model PixelPlacer.Models.ViewModels.ProjectListViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="NewProjectDisplay">Create New</a>
</p>
<table class="table">
    <thead>         
        <tr>
                <th>
                    Project Title
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Projects)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProjectId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjectId">Delete</a>
            </td>
        </tr>
    }

    </tbody>
</table>
