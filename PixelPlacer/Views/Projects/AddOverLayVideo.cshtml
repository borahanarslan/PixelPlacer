@model PixelPlacer.Models.ViewModels.CreateNewProjectViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Select a Video to Add</h2>

<div class="row">
    @foreach (var item in Model.OverLayList)
    {
        <div class="col-md-4">
            <br /><br />
            <h5 style="color:whitesmoke; text-align:center"> @item.VideoTitle</h5>

            <form asp-controller="Projects" asp-action="AddOverLayVideoToDB">
                <input type="hidden" value="@item.VideoId" name="id" />
                <img src=@item.Thumbnail>
                <input type="submit" value="Add Me" class="btn red-btn" style="margin-top: 10px; margin-left:35%;" />
            </form>
        </div>
    }
</div>

<br /><br />
<div>
    <a asp-controller="Projects" asp-action="NewProjectDisplay">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
