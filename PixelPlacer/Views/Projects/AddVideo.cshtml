@model PixelPlacer.Models.ViewModels.CreateNewProjectViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Select a Video to Add</h2>

<div class="row">

    @foreach (var item in Model.VideoList)
    {
        <div class="col-md-4">
            <br /><br />
            <p> @item.VideoTitle</p>
            
            <form asp-controller="Projects" asp-action="AddVideos" >
                <input type="hidden" value="@item.VideoId" name="id"/>
                <img src=@item.Thumbnail>
                <input type="submit" value="Add Me" class="btn" />
            </form> 
        </div>
     }
</div>
