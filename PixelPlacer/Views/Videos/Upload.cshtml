@model PixelPlacer.Models.ViewModels.UploadVideoViewModel

@{
    ViewData["Title"] = "Upload";
}
<div id="Upload-Container">
    <h2 class="upload-font-label-color">Upload a New Video</h2>

    <form asp-action="Upload" enctype="multipart/form-data">
        <div class="form-horizontal">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Video.VideoTitle" class="col-md-2 control-label upload-font-label-color">Video Title  :</label>
                <div class="col-md-10">
                    <input asp-for="@Model.Video.VideoTitle" class="form-control form-style" />
                    <span asp-validation-for="@Model.Video.VideoTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label asp-for="@Model.Video.VideoTypeId" class="col-md-2 control-label upload-font-label-color"> Video Type  : </label>
                    @Html.DropDownList(
             "Video.VideoTypeId",
             @Model.VideoTypeList,
             new
             {
                 @name = "Video.VideoTypeId"
             })
                    <input type="hidden" asp-for="@Model.Video.VideoTypeId" class="form-control" />
                    <span asp-validation-for="@Model.Video.VideoTypeId" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label asp-for="@Model.UserVideo" class="col-md-2 control-label upload-font-label-color">Upload Video  : </label>
                    <input asp-for="@Model.UserVideo" class="form-control" type="file" accept="video/*" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Upload" class="btn red-btn" />
                </div>
            </div>
        </div>
    </form>

    <div>
        <a asp-controller="Home" asp-action="Profile">Back</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
