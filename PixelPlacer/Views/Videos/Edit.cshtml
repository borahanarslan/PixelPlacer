@model PixelPlacer.Models.ViewModels.UpdateUploadViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="Edit-Video-Upload-Container">
    <h2>Edit</h2>
    <form asp-action="SaveUploadChanges">
        <div class="form-horizontal">
            <h4>Video</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Video.VideoId" />
            <div class="form-group">
                <div class="col-md-10">
                    <h4>Video Title</h4>
                    <input asp-for="@Model.Video.VideoTitle" class="form-control" />
                    <span asp-validation-for="@Model.Video.VideoTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <h4>Video Type</h4>
                    @Html.DropDownList(
                    "Video.VideoTypeId",
                    @Model.VideoTypeList,
                    "-- Please Select --",
                    new
                    {
                        @name = "Video.VideoTypeId",
                        @class = "form-control"
                    })
                    <input type="hidden" asp-for="@Model.Video.VideoTypeId" class="form-control" />
                    <span asp-validation-for="@Model.Video.VideoTypeId" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Save Changes" class="btn red-btn btn-spacing" style="margin-left:12px; margin-top:10px;"/>
                    <a asp-action="Index"class="btn red-btn btn-spacing" style="margin-left:10px; margin-top:10px;" >Back to Uploads</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
