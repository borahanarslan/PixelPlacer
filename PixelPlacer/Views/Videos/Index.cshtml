@model IEnumerable<PixelPlacer.Models.Video>

@{
    ViewData["Title"] = "Index";
}

<div id="MyUploads-Index-Container"></div>
<h2 style="color:whitesmoke;">My Uploads</h2>
<br />
<p>
    <a asp-action="Upload" class="btn-sm red-btn">Upload</a> | 
    <a asp-action="Profile" asp-controller="Home" class="btn-sm red-btn">Back</a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
                                
            <th style="color:whitesmoke;">
                @Html.DisplayNameFor(model => model.Thumbnail)
            </th>
            <th style="color:whitesmoke;">
                @Html.DisplayNameFor(model => model.VideoTitle)
            </th>
            <th style="color:whitesmoke;">
                @Html.DisplayNameFor(model => model.VideoTypeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>                        
            <td>
                <img src="@item.Thumbnail" />
            </td>
            <td style="color:whitesmoke;">
                @Html.DisplayFor(modelItem => item.VideoTitle)
            </td>
             @if (@item.VideoTypeId == 1)
              {
                <td style="color:whitesmoke;">
                Standard
                </td>
              }
              else if (@item.VideoTypeId == 2)
              {
                <td style="color:whitesmoke;">
                    Green Screen
                </td>
              }
            <td>
                <a asp-action="Edit" asp-route-id="@item.VideoId" class="btn red-btn">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.VideoId" class="btn red-btn">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
